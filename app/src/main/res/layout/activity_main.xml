<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.text.ui.activity.MainActivity">

    <android.support.percent.PercentFrameLayout
        android:id="@+id/activity_main_fg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="90%"
        app:layout_widthPercent="100%"
        />

    <Button
        android:id="@+id/activity_main_bn"
        android:layout_below="@id/activity_main_fg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="50%"
        android:text="这是第几个fragment"
        android:gravity="center"
        />
    <Button
        android:id="@+id/activity_main_bn_next"
        android:layout_toRightOf="@id/activity_main_bn"
        android:layout_below="@id/activity_main_fg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="50%"
        android:text="跳转"
        android:gravity="center"
        />

</android.support.percent.PercentRelativeLayout>
